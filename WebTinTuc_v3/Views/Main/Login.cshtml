@model WebTinTuc_v3.Models.TAIKHOAN

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-reboot.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/myCss.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/bootstrap.bundle.js"></script>
    <script src="~/Content/bootstrap.bundle.min.js"></script>
    <script src="~/Content/bootstrap.js"></script>
    <script src="~/Content/bootstrap.min.js"></script>

    <style>
        .field-validation-error{
            color: red;
        }
    </style>
</head>
<body class="full-cover">
    @using (Html.BeginForm("Login", "Main"))
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="box">
                <span>@Html.LabelFor(model => model.ID, new {@class ="lb"})</span>
                <span>@Html.TextBoxFor(model => model.ID, new { style = "field-validation-error", @class="txtBox" ,placeholder ="Enter you username"})</span>
                <p>@Html.ValidationMessageFor(model => model.ID)</p>

                <span>@Html.LabelFor(model => model.Password, new {@class="lb"})</span>
                <span>@Html.TextBoxFor(model => model.Password, new { style = "field-validation-error", @class = "txtBox" ,placeholder ="Enter you password"})</span>
                <p>@Html.ValidationMessageFor(model => model.Password)</p>

                <input type="submit" value="Login"/>
                <div class="border-top border-dark mt-2">
                    <p style="color: #051326;"><b>Don't have account?</b> @Html.ActionLink("Sign up here", "Register", "Main", new { @class = "lkSignUp" })</p>
                </div>             
            </div>
        </div>
    }
</body>
</html>
